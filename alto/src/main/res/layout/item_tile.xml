<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/tile_padding">

    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco="http://schemas.facebook.com/apk/res/android"
        android:id="@+id/drawee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_height"
        fresco:fadeDuration="0"
        fresco:actualImageScaleType="focusCrop"

        fresco:placeholderImage="@color/medium_grey"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:failureImage="@color/colorAccent"
        fresco:failureImageScaleType="centerInside"
        fresco:retryImage="@color/wait_color"
        fresco:retryImageScaleType="centerCrop"
        fresco:progressBarImage="@color/colorAccent"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="1000"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_height"
        android:alpha="0.3"
        android:visibility="gone"
        android:background="@color/dark_grey" />

    <TextView
        android:id="@+id/tile_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/item_title"
        android:textColor="@color/white"
        android:textSize="@dimen/article_titles"
        android:visibility="gone"/>

</RelativeLayout>
